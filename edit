/* Sidebar: Completely hidden initially */
.sidebar {
  width: 250px;
  background: #2c3e50;
  color: white;
  padding: 20px;
  height: 100vh;
  position: fixed;
  top: 0;
  left: -260px; /* Sidebar fully off-screen */
  transition: left 0.3s ease-in-out;
  z-index: 1000; /* Ensures it stays above other elements */
  box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.2);
}

/* Sidebar when open */
.sidebar.open {
  left: 0;
}

/* Ensure no scrolling when sidebar opens */
body.sidebar-open {
  overflow: hidden;
}

/* Sidebar Close Button */
.close-btn {
  background: none;
  color: white;
  border: none;
  font-size: 20px;
  cursor: pointer;
  float: right;
}

/* Sidebar Links */
.sidebar ul {
  list-style: none;
  padding: 0;
}

.sidebar ul li {
  padding: 15px;
  text-align: center;
}

.sidebar ul li a {
  color: white;
  text-decoration: none;
  font-size: 18px;
  display: block;
}

.sidebar ul li:hover {
  background: #34495e;
}

/* Dashboard Content */
.dashboard-content {
  margin-left: 0; /* Full width initially */
  width: 100%;
  padding: 32px;
  transition: margin-left 0.3s ease-in-out;
}

/* Ensure Analytics Chart Stays Inside */
.analytics-chart {
  position: relative;
  z-index: 1; /* Ensures it doesn't float above sidebar */
  margin-top: 20px;
}

/* Sidebar open: adjust dashboard layout */
.dashboard-content.sidebar-open {
  margin-left: 250px;
  width: calc(100% - 250px);
}

/* Responsive Fix for Mobile */
@media (max-width: 768px) {
  .sidebar {
    width: 100%;
    left: -100%;
  }

  .sidebar.open {
    left: 0;
  }

  .dashboard-content {
    width: 100%;
    margin-left: 0;
  }
}
